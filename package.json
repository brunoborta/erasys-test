    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.3",
    "typescript-eslint": "^8.55.0"
  },
  "packageManager": "pnpm@10.28.0"
}
