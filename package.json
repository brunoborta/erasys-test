{
  "name": "erasys-test",
  "version": "1.0.0",
  "description": "A take-home task from Erasys",
  "author": "Bruno 'Borta' Bortagaray",
  "license": "ISC",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
